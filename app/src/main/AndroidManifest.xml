<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="sacco.times.attendance">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TimesU"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="Reports"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".AbsentActivity"
            android:label="Absentees"
            android:parentActivityName=".HomeActivity">
        </activity>
        <activity
            android:name=".LateActivity"
            android:label="Late"
            android:parentActivityName=".HomeActivity">
        </activity>
        <activity
            android:name=".LandingActivity"
            android:label="Home">
        </activity>
        <activity android:theme="@style/AppTheme.NoActionBar" android:name=".AboutActivity">
        </activity>
    </application>

</manifest>