<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sacco.times.attendance.HomeActivity"
    tools:showIn="@layout/app_bar_home">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingLeft="8dp"
                android:paddingBottom="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="#000000"
                    android:text="Staff Names"
                    android:textSize="16sp"
                    android:layout_width="@dimen/medium_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Branch"
                    android:textSize="16sp"
                    android:layout_width="@dimen/small_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="center"
                    android:text="Depart"
                    android:textSize="16sp"
                    android:layout_width="@dimen/small_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:text="Date"
                    android:textSize="16sp"
                    android:layout_width="@dimen/small_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:textColor="#0a0909"
                    android:text="Time In"
                    android:textSize="16sp"
                    android:layout_width="@dimen/small_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:textColor="#0a0909"
                    android:text="Time Out"
                    android:textSize="16sp"
                    android:layout_width="@dimen/small_width"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:textColor="#0a0909"
                    android:text="Hours"
                    android:textSize="14sp"
                    android:layout_width="@dimen/small_width"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:background="#151515"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        </LinearLayout>
        <TextView
            android:textAlignment="center"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/txt_feed_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>



</HorizontalScrollView>
