<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      xmlns:tools="http://schemas.android.com/tools"
                      tools:context="timesu.sacco.attendance.LateActivity"
                      android:scrollbars="none"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingLeft="8dp"
                android:paddingBottom="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="#000000"
                    android:text="Staff Names"
                    android:textSize="16sp"
                    android:layout_width="@dimen/medium_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="#000000"
                    android:text="Branch"
                    android:textSize="16sp"
                    android:layout_width="@dimen/small_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="#000000"
                    android:text="Depart"
                    android:textSize="16sp"
                    android:layout_width="@dimen/small_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="#000000"
                    android:text="Date"
                    android:textSize="16sp"
                    android:layout_width="@dimen/small_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="#0a0909"
                    android:text="Time In"
                    android:textSize="16sp"
                    android:layout_width="@dimen/small_width"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:background="#151515"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        </LinearLayout>

        <TextView
            android:textAlignment="center"
            android:id="@+id/txt_feed_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Data Found For This Date"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </android.support.v7.widget.RecyclerView>



    </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="pick_date"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_specific_date"/>
    </FrameLayout>
</HorizontalScrollView>
